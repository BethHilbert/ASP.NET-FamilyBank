@model GenieBank.Models.BankAccount

@{
    ViewBag.Title = "Delete @Model.Name's Account";
}

<nav class="breadcrumb">
	<ol class="breadcrumb">
		<li><a href="@Url.Action("Index","Home")">Home</a></li>
		<li><a href="@Url.Action("Index", "BankAccounts")">Account List</a></li>
		<li class="active">Delete @Model.Name's Account</li>
	</ol>
</nav>


<h2>Delete @Model.Name's Account</h2>

<h3>Are you sure you want to delete this recipient's bank account?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OwnerEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OwnerEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RecipientEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecipientEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InterestRate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InterestRate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <p><input type="submit" value="Delete" class="btn btn-default" /> </p>
            @Html.ActionLink("Return to Account List", "Index")
        </div>
    }
</div>
